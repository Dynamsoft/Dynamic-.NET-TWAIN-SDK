        <Button Name="btnCaptureImage" Content="Capture Image" HorizontalAlignment="Left" Margin="36,0,0,154" VerticalAlignment="Bottom" Width="136" Height="21.96" Click="btnCaptureImage_Click" />
        <ComboBox Name="cbxSources" HorizontalAlignment="Left" Margin="36,63,0,0" VerticalAlignment="Top"  Width="136" RenderTransformOrigin="-0.134,0.114"/>
